{% sw_extends '@Storefront/base.html.twig' %}

{% block base_flashbags %}
    <div id="flashbags">
        {% for type, messages in app.flashes(["warning", "error", "danger"]) %}
            {% if messages is not empty %}
                {% sw_include '@Storefront/base/_utilities/alert.html.twig' with { type: type, list: messages } %}
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}

{% block base_content %}{% endblock %}
